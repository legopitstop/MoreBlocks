{
    "format_version": "1.21.10",
    "minecraft:block": {
        "description": {
            "identifier": "moreblocks:exposed_copper_bulb_vertical_slab",
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ]
                }
            },
            "states": {
                "moreblocks:double": [
                    false,
                    true
                ],
                "moreblocks:powered": [
                    false,
                    true
                ],
                "moreblocks:lit": [
                    false,
                    true
                ]
            },
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.slab"
            }
        },
        "components": {
            "minecraft:light_dampening": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 3
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 6
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "minecraft:exposed_copper_bulb"
                }
            },
            "minecraft:geometry": {
                "identifier": "geometry.template_vertical_slab",
                "culling": "mc:template_vertical_slab"
            },
            "minecraft:collision_box": {
                "origin": [
                    -8.0,
                    0.0,
                    0.0
                ],
                "size": [
                    16.0,
                    16.0,
                    8.0
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8.0,
                    0.0,
                    0.0
                ],
                "size": [
                    16.0,
                    16.0,
                    8.0
                ]
            },
            "minecraft:tick": {
                "looping": true,
                "interval_range": [
                    0,
                    0
                ]
            },
            "minecraft:custom_components": [
                "moreblocks:vertical_slab",
                "moreblocks:copper",
                "moreblocks:copper_bulb"
            ]
        },
        "permutations": [
            {
                "condition": "q.block_state('minecraft:cardinal_direction')=='north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0.0,
                            180.0,
                            0.0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction')=='south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0.0,
                            0.0,
                            0.0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction')=='east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0.0,
                            90.0,
                            0.0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction')=='west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0.0,
                            -90.0,
                            0.0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('moreblocks:double')",
                "components": {
                    "minecraft:collision_box": true,
                    "minecraft:selection_box": true,
                    "minecraft:loot": "loot_tables/blocks/exposed_copper_bulb_double_vertical_slab.json",
                    "minecraft:geometry": "minecraft:geometry.full_block"
                }
            },
            {
                "condition": "q.block_state('moreblocks:powered') && !q.block_state('moreblocks:lit')",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "minecraft:exposed_copper_bulb_powered"
                        }
                    }
                }
            },
            {
                "condition": "q.block_state('moreblocks:powered') && q.block_state('moreblocks:lit')",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "minecraft:exposed_copper_bulb_lit_powered"
                        }
                    }
                }
            },
            {
                "condition": "!q.block_state('moreblocks:powered') && q.block_state('moreblocks:lit')",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "minecraft:exposed_copper_bulb_lit"
                        }
                    }
                }
            }
        ]
    }
}